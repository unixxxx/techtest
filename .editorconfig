# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js,css,less}]
quote_type = single
max_line_length=110

[*.html]
max_line_length=110

[*.md]
max_line_length = off
trim_trailing_whitespace = false
